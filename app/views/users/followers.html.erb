<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <h2>followers</h2>
    <ul class="cards">
    <% @users.each do |user| %>
    <li class="col-md-3">
      <%= link_to  do %>
      <%= gravatar_for user %>
      <dl>
        <dt><%= user.name %></dt>
        <dd><%= user.profile %></dd>
      </dl>
      <% end %>
    </li>
    <% end %>
    </ul>
  </div>
</div>